@model WebHoly.ViewModels.HolySubscriptionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string error = ViewBag.error;

}
@if (!string.IsNullOrEmpty(error))
{
